{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    // 跳过声明文件的类型检查
    "noEmitOnError": false,
    // 允许在有错误的情况下生成 JavaScript
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
      // 配置 TypeScript 的路径别名
    }
  }
}
